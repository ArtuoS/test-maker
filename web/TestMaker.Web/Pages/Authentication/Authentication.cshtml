@page "/authenticate"
@using TestMaker.Web.Pages.Authentication;
@model AuthenticationModel
@{
    ViewData["Title"] = "Autenticação";
}

<div class="container text-center">
    <h1 class="text-black">Autenticação</h1>
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-5">
                @Html.TextBoxFor(t => t.Login, new { @maxlength=25, @class = "form-control", @placeholder = "Login" })
            </div>
            <div class="col-md-5">
                @Html.PasswordFor(t => t.Password, new { @maxlength=25, @class = "form-control", @placeholder = "Senha" })
            </div>
            <div class="form-group col-md-1">
                <input type="submit" value="Autenticar" class="btn btn-success" />
            </div>
        </div>
    }
</div>